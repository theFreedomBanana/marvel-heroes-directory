{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true //For new ES6 global variables
  },
  "extends": [
    "react-app",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:flowtype/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6, //For ES6 syntax
    "ecmaFeatures": {
      "sourceType": "module",
      "impliedStrict": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "flowtype"
  ],
  "rules": {
    "eqeqeq": [ "error", "always" ],
    "comma-dangle": [ "error", {
        "arrays": "only-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "ignore"
    }],
    "curly": [ "error", "multi" ],
    "indent": [ "error", 2 ],
    "linebreak-style": [ "error", "unix" ],
    "no-alert": "warn",
    "no-cond-assign": [ "error", "always" ],
    "no-console": "warn",
    "no-undef": "error",
    "no-unused-vars": [ "error", {
      "vars": "all",
      "args": "none"
    }],
    "one-var": [ "error", "never" ],
    "quotes": [ "error", "double" ],
    "semi": [ "error", "never" ],
    "strict": [ "error", "global" ]
    //eslint-plugin-react rules
    // "react/prop-types": "warn"
  }
}
